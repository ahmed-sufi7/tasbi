{
  "design_system_name": "Circular Progress Counter Interface",
  "design_philosophy": "Minimal, modern, time-based circular interface with emphasis on clarity and visual progress tracking through geometric shapes and color contrast",
  
  "visual_hierarchy": {
    "primary_focus": "Central numeric display (count)",
    "secondary_focus": "Circular progress indicator",
    "tertiary_focus": "Label text below counter",
    "ambient_elements": "Clock-face tick marks, time indicators, icon badges"
  },

  "layout_structure": {
    "type": "circular_radial",
    "composition": {
      "outer_ring": {
        "purpose": "Background track for progress",
        "position": "Outermost layer",
        "visual_weight": "Low opacity, neutral"
      },
      "progress_ring": {
        "purpose": "Active progress indicator",
        "position": "Overlays outer ring",
        "visual_weight": "High contrast, vibrant",
        "animation": "Grows clockwise from top (12 o'clock position)"
      },
      "clock_face": {
        "purpose": "Provides scale reference",
        "position": "Inner circle boundary",
        "elements": ["tick marks (60 or 120 marks)", "hour numbers (0, 6, 12, 18)"]
      },
      "center_content": {
        "purpose": "Primary data display",
        "position": "Absolute center",
        "hierarchy": ["Large count number", "Small icon (optional)", "Unit label (am/pm equivalent)"]
      },
      "bottom_label": {
        "purpose": "Context identifier",
        "position": "Below circular interface",
        "content": "Descriptive text (e.g., 'Durood-e-Ibrahimi')"
      }
    }
  },

  "color_palette": {
    "theme": "dark_mode_primary",
    "colors": {
      "background": {
        "hex": "#000000",
        "usage": "Canvas background",
        "notes": "Pure black for OLED optimization"
      },
      "primary_accent": {
        "hex": "#1E90FF",
        "rgb": "30, 144, 255",
        "usage": "Progress ring, active elements, primary text",
        "notes": "Vibrant blue - high contrast against black"
      },
      "secondary_neutral": {
        "hex": "#3A3A3A",
        "rgb": "58, 58, 58",
        "usage": "Inactive ring track, muted elements",
        "notes": "Dark gray - subtle contrast"
      },
      "text_primary": {
        "hex": "#1E90FF",
        "usage": "Main count number, important labels",
        "notes": "Matches primary accent for cohesion"
      },
      "text_secondary": {
        "hex": "#8A8A8A",
        "usage": "Supporting text, units, descriptive labels",
        "notes": "Medium gray for hierarchy"
      },
      "tick_marks": {
        "hex": "#2A2A2A",
        "opacity": 0.6,
        "usage": "Clock face divisions",
        "notes": "Subtle reference lines"
      }
    },
    "light_mode_adaptation": {
      "background": "#FFFFFF",
      "primary_accent": "#007AFF",
      "secondary_neutral": "#E5E5EA",
      "text_primary": "#000000",
      "text_secondary": "#8E8E93",
      "tick_marks": "#D1D1D6"
    }
  },

  "typography": {
    "font_family": "SF Pro Display, -apple-system, system-ui",
    "fallbacks": ["Roboto", "Segoe UI", "sans-serif"],
    "type_scale": {
      "count_display": {
        "size": "72-96px",
        "weight": "200-300 (Thin/Light)",
        "line_height": "1.0",
        "letter_spacing": "-2px",
        "notes": "Ultra-large, thin weight for elegance"
      },
      "time_unit": {
        "size": "24-28px",
        "weight": "400 (Regular)",
        "line_height": "1.2",
        "letter_spacing": "0",
        "notes": "Medium size, paired with count (e.g., 'am')"
      },
      "bottom_label": {
        "size": "20-24px",
        "weight": "400-500 (Regular/Medium)",
        "line_height": "1.3",
        "letter_spacing": "0.5px",
        "notes": "Clear, readable descriptor"
      },
      "clock_numbers": {
        "size": "16-18px",
        "weight": "500 (Medium)",
        "line_height": "1.0",
        "letter_spacing": "0",
        "opacity": 0.6,
        "notes": "Subtle hour markers"
      }
    }
  },

  "geometric_specifications": {
    "circular_elements": {
      "outer_ring": {
        "diameter": "80-85% of container width",
        "stroke_width": "24-32px",
        "color": "secondary_neutral",
        "opacity": 0.3,
        "style": "solid stroke"
      },
      "progress_ring": {
        "diameter": "Same as outer_ring",
        "stroke_width": "24-32px",
        "color": "primary_accent",
        "opacity": 1.0,
        "cap_style": "rounded",
        "start_angle": "-90deg (12 o'clock)",
        "animation": "smooth arc progression"
      },
      "dotted_progress": {
        "style": "Small circular dots forming ring",
        "dot_size": "4-6px",
        "dot_spacing": "8-10px between centers",
        "dot_count": "Approximately 60-80 dots",
        "color": "primary_accent",
        "opacity": 1.0,
        "notes": "Creates segmented progress feel"
      },
      "clock_face": {
        "diameter": "75-80% of outer ring",
        "tick_marks": {
          "count": 60,
          "length": "8-12px",
          "width": "1-2px",
          "major_ticks": "Every 5th tick is 2x longer",
          "color": "tick_marks",
          "opacity": 0.4
        }
      }
    },
    "spacing": {
      "ring_to_center": "40-50% of ring radius",
      "center_to_bottom_label": "60-80px",
      "icon_badge_offset": "Outside ring at progress point"
    }
  },

  "icon_system": {
    "badge_icons": {
      "style": "Rounded square or circular containers",
      "background": "primary_accent",
      "size": "40-48px",
      "icon_size": "20-24px (50% of container)",
      "icon_color": "#FFFFFF",
      "position": "Anchored to progress ring endpoint",
      "examples": {
        "sleep_start": "bed icon",
        "sleep_end": "alarm clock icon",
        "durood_milestone": "star or checkmark icon",
        "goal_target": "flag or target icon"
      }
    },
    "center_icon": {
      "style": "Simple line icon",
      "size": "24-32px",
      "color": "text_secondary",
      "position": "Above or beside count number",
      "opacity": 0.8
    }
  },

  "animation_principles": {
    "progress_animation": {
      "duration": "0.8-1.2s",
      "easing": "cubic-bezier(0.4, 0.0, 0.2, 1)",
      "style": "Smooth clockwise rotation",
      "increment_feedback": "Spring animation on count update"
    },
    "number_transition": {
      "duration": "0.3-0.5s",
      "easing": "ease-out",
      "style": "Fade and scale (0.95 -> 1.0)",
      "notes": "Gentle bounce on increment"
    },
    "badge_movement": {
      "follows": "Progress ring endpoint",
      "duration": "Matches progress animation",
      "easing": "Same as progress"
    }
  },

  "interaction_patterns": {
    "tap_target": {
      "area": "Entire circular interface",
      "feedback": {
        "visual": "Subtle scale (0.98) on touch",
        "haptic": "Light impact feedback",
        "animation": "Immediate count increment"
      }
    },
    "long_press": {
      "area": "Center of circle",
      "action": "Reset counter (with confirmation)",
      "feedback": "Medium haptic + confirmation modal"
    }
  },

  "responsive_behavior": {
    "small_screens": {
      "circle_diameter": "70-75% of screen width",
      "count_font_size": "64-72px",
      "ring_stroke": "20-24px"
    },
    "medium_screens": {
      "circle_diameter": "60-65% of screen width",
      "count_font_size": "80-96px",
      "ring_stroke": "24-28px"
    },
    "large_screens": {
      "circle_diameter": "50-55% of screen width",
      "count_font_size": "96-120px",
      "ring_stroke": "28-32px",
      "max_width": "600px (container constraint)"
    }
  },

  "accessibility_considerations": {
    "contrast_ratios": {
      "count_to_background": "Minimum 7:1 (AAA)",
      "progress_to_background": "Minimum 4.5:1 (AA)"
    },
    "semantic_structure": {
      "count_label": "Announced as 'Count: [number]'",
      "progress_label": "Announced as '[percentage]% complete'",
      "durood_name": "Announced as heading level 2"
    },
    "voice_over": "All interactive elements properly labeled"
  },

  "implementation_notes": {
    "flutter_widgets": [
      "CustomPaint for circular elements",
      "TweenAnimationBuilder for progress",
      "Stack for layering elements",
      "Transform.rotate for progress arc",
      "GestureDetector for tap handling"
    ],
    "performance_tips": [
      "Use RepaintBoundary for circle",
      "Cache complex shapes",
      "Optimize tick mark rendering",
      "Use const constructors where possible"
    ]
  },

  "variations": {
    "goal_modes": {
      "fixed_goal": {
        "progress": "Current count / Goal target",
        "completion": "Ring fills to 100%"
      },
      "infinite_count": {
        "progress": "Show segments per milestone (e.g., per 100)",
        "completion": "Continuous counting with celebrations"
      }
    },
    "visual_styles": {
      "minimal": "Single progress ring, no tick marks",
      "detailed": "Full clock face with all elements",
      "gradient": "Progress ring with color gradient",
      "neon": "Glowing effect on progress ring"
    }
  },

  "adaptation_for_tasbeeh": {
    "center_display": {
      "primary": "Current count (e.g., '573')",
      "secondary": "Optional icon or milestone indicator",
      "tertiary": "Target remaining (e.g., '427 left')"
    },
    "bottom_label": {
      "content": "Durood/Tasbeeh name",
      "examples": ["Durood-e-Ibrahimi", "SubhanAllah", "Ayatul Kursi"]
    },
    "progress_calculation": {
      "formula": "(current_count / goal) * 360deg",
      "milestones": [100, 300, 500, 1000],
      "celebration_points": "Show badge icons at milestones"
    }
  }
}